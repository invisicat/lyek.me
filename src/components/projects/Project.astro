---
interface ProjectProps {
  title: string;
  description: string;
  link: string;
}

const props: ProjectProps = Astro.props as ProjectProps;
---

<div
  class="border-[0.2px] rounded-lg my-3 border-gray-300 max-w-screen-md hover:border-gray-600 transition-all"
>
  <div class="p-3">
    <h2 class="text-2xl font-semibold">{props.title}</h2>
    <p class="">{props.description}</p>
    <a href={props.link} class="text-blue-500 hover:text-blue-700"> </a>
  </div>
</div>
